{
  "version": "1.0.0",
  "description": "Master rule engine configuration - completely JSON-driven",
  
  "processing_pipeline": [
    {
      "step": "context_detection",
      "config_file": "context_rules.json",
      "enabled": true
    },
    {
      "step": "stats_analysis", 
      "config_file": "stats_rules.json",
      "enabled": true
    },
    {
      "step": "tone_selection",
      "config_file": "context_rules.json",
      "section": "tone_selection",
      "enabled": true
    },
    {
      "step": "gesture_selection",
      "config_file": "context_rules.json", 
      "section": "gesture_selection",
      "enabled": true
    },
    {
      "step": "statement_selection",
      "config_file": "statements.json",
      "mapping_file": "gesture_statements.json",
      "enabled": true
    },
    {
      "step": "message_overlay",
      "config_file": "stats_rules.json",
      "section": "message_overlays", 
      "enabled": true
    }
  ],
  
  "rule_engine_settings": {
    "debug_mode": true,
    "explanation_level": "detailed",
    "fallback_behavior": "default_calm",
    "weight_normalization": true,
    "min_confidence_threshold": 0.1
  },
  
  "customizable_thresholds": {
    "league_position_gaps": {
      "major_advantage": 8,
      "minor_advantage": 3,
      "neutral_range": 2
    },
    "form_analysis": {
      "games_to_analyze": 5,
      "hot_streak_threshold": 9,
      "poor_form_threshold": 3
    },
    "stats_thresholds": {
      "low_possession": 40,
      "high_possession": 65,
      "significant_shot_difference": 3,
      "meaningful_xg_delta": 0.8
    },
    "tone_weights": {
      "max_boost": 0.5,
      "max_penalty": -0.5,
      "normalization_floor": 0.01
    }
  },
  
  "admin_interface_config": {
    "editable_sections": [
      "context_detection",
      "tone_selection", 
      "gesture_selection",
      "stats_analysis",
      "customizable_thresholds"
    ],
    "validation_rules": {
      "weight_range": { "min": -1.0, "max": 2.0 },
      "threshold_range": { "min": 0, "max": 100 },
      "required_tones": ["calm", "assertive", "motivational", "relaxed", "aggressive"]
    }
  }
}